				<Panel id="UpgradesWikiContainer">
			  </Panel>				        
			</Panel>	                          
		</Panel>
    <Panel id="UpgradesWiki2" hittest="true" hittestchildren="true">      
      <DOTAScenePanel id="UpgradesWikiScenePanel2" particleonly="false" drawbackground="false"  style="width:300px; height:300px;"/>
      <Label id="UpgradesWikiHeader2" text="" />
      <Label id="UpgradesWikiSubheader2" text="" />
			<Panel class="UpgradesWikiBody2">				
				<Panel id="UpgradesWikiContainer2">
			  </Panel>				
			</Panel>	  
      <Panel id="WikiOffButton2" onactivate='UpgradesWiki2.style["visibility"] = "collapse"; UpgradesWiki.style["visibility"] = "visible";'/>         
